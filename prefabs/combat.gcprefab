        <panel src="main_ui_game" x="3%" y="2%" width="30%" height="15%" centered="false"/>
		<text text="Loading" x="13%" y="6%" centered="false">
              <game_display stats="health_ennemy"/>
         </text>
        <text text=" " x="13%" y="14%" centered="false"/>
