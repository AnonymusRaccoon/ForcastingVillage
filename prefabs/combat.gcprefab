        <text text="Loading" x="13%" y="65%" centered="false">
              <game_display stats="health"/>
         </text>

        <gc_entity id="50">
            <transform_component>
                <Size x="100" y="100 />
            </transform_component>
            <map_linker x="0" y="0" />
            <player_component />
            <attack_component>
                <attack name="Uppercut" />
